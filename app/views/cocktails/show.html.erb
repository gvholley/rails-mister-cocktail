<div class="container outline col-8">
<div class="d-flex justify-content-center">

  <h1 class="cocktailname"><%= @cocktail.name %></h1>
  </div>

  <div class="d-flex justify-content-center">
  <% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
</div>
<div class="d-flex justify-content-center">
  <ul class="dosenames">
    <% @doses.each do |dose| %>
      <li><%= dose.ingredient.name %> â€” <%= dose.description %>
          <%= link_to "Delete", dose_path(dose), method: :delete, class: "btn btn-ghost2" %>
      </li>
    <% end %>
  </ul>
</div>

<div class="d-flex justify-content-center">
  <%= link_to "Add a Dose", new_cocktail_dose_path(@cocktail),  class: "btn btn-ghost" %>
</div>
<div class="d-flex justify-content-center">
  <%= link_to "Back to Cocktails", cocktails_path,  class: "btn btn-ghost" %>
</div>
