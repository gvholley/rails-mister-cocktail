<div class="container">
  <h1>Add a Dose</h1>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient, collection: Ingredient.order(:name), prompt: "Select an ingredient" %>
    <%= f.submit "Add an ingredient" %>
  <% end %>
</div>
